<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:activity=".goal.GoalFragment">
    <data>
        <variable
            name="presenter"
            type="com.demo.savemymoney.goal.GoalFragmentPresenter"/>

    </data>

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/goal_amount_saving_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="@string/string_goals"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cash_saving"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/goal_progress_mensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.emredavarci.circleprogressbar.CircleProgressBar xmlns:cpb="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/progressBar"
                    android:layout_width="300dp"
                    android:layout_height="200dp"

                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center|center_vertical"
                    cpb:backgroundColor="#e7b330"
                    cpb:backgroundWidth="10"
                    cpb:maxValue="100"
                    cpb:prefix=""
                    cpb:progressColor="#e76130"
                    cpb:progressText="Loading..."
                    cpb:progressTextColor="#f9916b"
                    cpb:roundedCorners="true"
                    cpb:strokeWidth="14"
                    cpb:suffix="%"
                    cpb:textSize="30sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/group3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/amount_goal_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                >

                <ru.kolotnev.formattedittext.CurrencyEditText
                    android:id="@+id/amount_goal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/string_goals_amaunt"
                    android:textSize="20sp"
                    android:maxLength="17"
                    android:singleLine="true"
                    app:currency="PEN" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/description_goal_Til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                >

                <EditText
                    android:id="@+id/description_goal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:ems="10"
                    android:hint="@string/string_goals_description"
                    android:maxLength="32"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/register_goal_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="@{()->presenter.saveGoal()}"
                    android:text="@string/string_goals_register" />
            </LinearLayout>
            <TextView
                android:id="@+id/delete_goal_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/float_transparent"
                android:textColor="@color/md_black_1000"
                android:layout_gravity="end|bottom"
                android:text="@string/goal_button_delete"
                android:onClick="@{()->presenter.deleteGoal()}"
                />


        </LinearLayout>




    </LinearLayout>
    

</ScrollView>



</layout >