<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:activity=".goal.GoalProgressFragment">
    <data>
        <variable
            name="presenter"
            type="com.demo.savemymoney.goal.GoalProgressFragmentPresenter"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

                <com.emredavarci.circleprogressbar.CircleProgressBar
                    xmlns:cpb="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="311dp"
                    android:layout_margin="50dp"

                    android:layout_marginTop="10dp"
                    android:gravity="center|center_vertical"
                    android:padding="50dp"
                    cpb:backgroundColor="#e7b330"
                    cpb:backgroundWidth="8"
                    cpb:maxValue="100"
                    cpb:prefix=""
                    cpb:progressColor="#e76130"
                    cpb:progressText="Loading..."
                    cpb:progressTextColor="#f9916b"
                    cpb:roundedCorners="true"
                    cpb:strokeWidth="14"
                    cpb:suffix="%"
                    cpb:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        </LinearLayout>



    </LinearLayout>



</layout>