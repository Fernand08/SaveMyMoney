<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:activity=".goal.GoalProgressFragment">
    <data>
        <variable
            name="presenter"
            type="com.demo.savemymoney.goal.GoalProgressFragmentPresenter"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="339dp"
            android:orientation="horizontal">

            <com.emredavarci.circleprogressbar.CircleProgressBar xmlns:cpb="http://schemas.android.com/apk/res-auto"
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="311dp"
                android:layout_margin="50dp"

                android:layout_marginTop="10dp"
                android:gravity="center|center_vertical"
                android:padding="50dp"
                cpb:backgroundColor="#e7b330"
                cpb:backgroundWidth="8"
                cpb:maxValue="100"
                cpb:prefix=""
                cpb:progressColor="#e76130"
                cpb:progressText="Loading..."
                cpb:progressTextColor="#f9916b"
                cpb:roundedCorners="true"
                cpb:strokeWidth="14"
                cpb:suffix="%"
                cpb:textSize="30dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/goal_progress_mensaje"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"

            android:textSize="20dp"
            android:textStyle="bold"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/goal_progress_update"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:onClick="@{()->presenter.goDecreaseAmountSaving()}"
                android:text="@string/goal_goals_decrease" />


        </LinearLayout>

    </LinearLayout>



</layout>